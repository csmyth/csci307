<h1>Listing privileges</h1>

<table>
  <tr>
    <th>Role</th>
    <th>Table name</th>
    <th>Create</th>
    <th>Read all</th>
    <th>Read own</th>
    <th>Update all</th>
    <th>Update own</th>
    <th>Delete all</th>
    <th>Delete own</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @privileges.each do |privilege| %>
  <tr>
    <td><%= privilege.role_id %></td>
    <td><%= privilege.table_name %></td>
    <td><%= privilege.create %></td>
    <td><%= privilege.read_all %></td>
    <td><%= privilege.read_own %></td>
    <td><%= privilege.update_all %></td>
    <td><%= privilege.update_own %></td>
    <td><%= privilege.delete_all %></td>
    <td><%= privilege.delete_own %></td>
    <td><%= link_to 'Show', privilege %></td>
    <td><%= link_to 'Edit', edit_privilege_path(privilege) %></td>
    <td><%= link_to 'Destroy', privilege, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

